<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CadastroNfcActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Aproxime a pulseira"
        android:id="@+id/aproximeText"
        android:textSize="30dp"
        android:layout_marginTop="160dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:fontFamily="@font/montserratbold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:src="@drawable/nfc"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="270dp"
        app:layout_constraintStart_toStartOf="@id/aproximeText"
        app:layout_constraintEnd_toEndOf="@id/aproximeText" />


</androidx.constraintlayout.widget.ConstraintLayout>